<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" />
      <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" />
      <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
         <children>
            <AnchorPane layoutY="-10.0">
               <children>
                  <Button fx:id="login" layoutX="141.0" layoutY="222.0" mnemonicParsing="false" onAction="#Login" text="Login">
                     <font>
                        <Font name="Segoe UI" size="16.0" />
                     </font>
                  </Button>
                  <PasswordField fx:id="userpassword" alignment="CENTER" layoutX="26.0" layoutY="160.0" prefHeight="34.0" prefWidth="292.0" promptText="Password">
                     <font>
                        <Font name="Segoe UI" size="16.0" />
                     </font>
                  </PasswordField>
                  <TextField fx:id="userid" alignment="CENTER" layoutX="26.0" layoutY="113.0" prefHeight="34.0" prefWidth="292.0" promptText="User ID">
                     <font>
                        <Font name="Segoe UI" size="16.0" />
                     </font>
                  </TextField>
                  <Label fx:id="lblstatus" alignment="CENTER" contentDisplay="CENTER" layoutX="4.0" layoutY="58.0" prefHeight="42.0" prefWidth="328.0" text="Enter UserID and Password" textAlignment="CENTER" textFill="#f21515">
                     <font>
                        <Font name="Segoe UI" size="16.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
